\theoremheaderfont{\normalfont\scshape}
\theoremseparator{.}
%
\newtheorem{axiom}{Axiom}
\newtheorem{conjecture}{Conjecture}
\newtheorem{corollary}{Corollary}
\newtheorem{definition}{Definition}
\newtheorem{proposition}{Proposition}
\newtheorem{theorem}{Theorem}
%
\theorembodyfont{\small}
%
\newtheorem*{note}{Note}
\newtheorem*{remark}{Remark}
\newtheorem{comment}{Commentary}
\newtheorem{example}{Example}
\newtheorem{experiment}{Experiment}
%
% theorem/proof analysis
%
\theoremstyle{plain}
\newtheorem*{tologic}{Statement logic form}
\newtheorem*{tvanalysis}{Truth value analysis}
\newtheorem*{mathematica}{Mathematica experiment}
\newtheorem*{conjanalysis}{Conjecture analysis}
\newtheorem*{scratch}{Scratch work}
\newtheorem*{proofanalysis}{Proof analysis}
\newtheorem*{proofform}{Proof form}
\newtheorem*{sanity}{Sanity check}
\newtheorem*{reflexion}{Reflexion}
\newtheorem*{generalization}{Generalization}
\newtheorem*{specialization}{Specialization}
%
\theoremheaderfont{
  \itshape%
}
\theorembodyfont{\upshape}
\theoremseparator{.}
\theoremsymbol{\ensuremath{\square}}
%
\theoremstyle{plain}
\newtheorem*{proof}{Proof}
\newtheorem*{counterexample}{Counterexample}
%
\theoremheaderfont{
  \small\itshape%
}
\theorembodyfont{\small\upshape}
%
\newtheorem*{solution}{Solution}

% various
%
\providecommand*{\abs}[1]{\mleft\lvert{#1}\mright\rvert} % absolute value
\providecommand*{\defas}{\circeq}                        % alt. \circeq
\providecommand*{\inv}[1]{{#1}^{-1}}                     % inverse
%
\providecommand*{\bracks}[1]{\mleft[{#1}\mright]} % brackets
\providecommand*{\parens}[1]{\mleft({#1}\mright)} % parentheses
\providecommand*{\vat}[1]{\parens{#1}}            % value at a point
\providecommand*{\lvat}[1]{\,{#1}}                % (lambda) \vat
%
% text
%
% text under braces
\providecommand*{\underbracetext}[2]{\underbrace{#1}_{\text{#2}}} %
%
% text in math environments
%
\providecommand*{\eqtxt}[1]{\mleft\lbrack\text{\footnotesize{#1}}\mright\rbrack}

% set
%
\providecommand*{\bset}[2]{\mleft\lbrace{#1}\mid{#2}\mright\rbrace} % building
\providecommand*{\lset}[1]{\mleft\lbrace{#1}\mright\rbrace}         % listing
%
% special sets
%
\providecommand*{\svoid}{\cancel{\mathrm{O}}} % the void (empty) set
\providecommand*{\specialset}[1]{\mathbb{#1}} % special number sets
%
% number sets
%
\providecommand*{\compl}{\specialset{C}} % complex
\providecommand*{\evens}{\specialset{E}} % evens
\providecommand*{\ints}{\specialset{Z}}  % integers
\providecommand*{\nats}{\specialset{N}}  % naturals (includes zero)
\providecommand*{\odds}{\specialset{O}}  % odds
\providecommand*{\rats}{\specialset{Q}}  % rationals
\providecommand*{\reals}{\specialset{R}} % reals
%
\providecommand*{\espace}{\specialset{E}} % euclidean space (real with metric)
%
\providecommand*{\nonneg}[1]{{#1}^{+}}              % non-negative (+ and 0)
\providecommand*{\nonpos}[1]{{#1}^{-}}              % non-positive (- and 0)
\providecommand*{\notzero}[1]{{#1}^{\prime}}        % zero not included
\providecommand*{\posnats}{\nonneg{\nats}}          % naturals (exc. zero)
\providecommand*{\strneg}[1]{\nonpos{\notzero{#1}}} % strictly negative
\providecommand*{\strpos}[1]{\nonneg{\notzero{#1}}} % strictly positive
\providecommand*{\xreals}{\overline{\reals}}        % ext. reals: +/- infinity
%
% operations on sets
%
% finite set cardinality
\providecommand*{\fscard}[1]{\mleft\lvert{#1}\mright\rvert} %
%
\providecommand*{\sdiff}{\setminus}       % set difference
\providecommand*{\sinter}{\cap}           % set intersection
\providecommand*{\sprod}{\times}          % set (Cartesian) product
\providecommand*{\ssdiff}{\bigtriangleup} % set symmetric difference
\providecommand*{\sunion}{\cup}           % set union
%
\providecommand*{\psset}{\subset}  % proper subset
\providecommand*{\sset}{\subseteq} % subset

% intervals
%
\providecommand*{\ccint}[2]{\mleft[{#1},{#2}\mright]} % close-close
\providecommand*{\coint}[2]{\mleft[{#1},{#2}\mright[} % close-open
\providecommand*{\ocint}[2]{\mleft]{#1},{#2}\mright]} % open-close
\providecommand*{\ooint}[2]{\mleft]{#1},{#2}\mright[} % open-open

% functions
%
\providecommand*{\fdef}[3]{{#1}\coloncolon{#2}\to{#3}}     % definition
\providecommand*{\fmap}[3]{{#1}\coloncolon{#2}\mapsto{#3}} % as map: with eqn.
%
\providecommand*{\fcomp}{\circ}       % composition
\providecommand*{\fdclass}[1]{C^{#1}} % class wrt diff.

% tuples
%
\providecommand*{\tuple}[1]{\mleft\langle{#1}\mright\rangle} % tuple

% math constants
%
\providecommand*{\ke}{\mathrm{e}}
\providecommand*{\ki}{\mathrm{i}}
\providecommand*{\kpi}{\uppi}
\providecommand*{\ktau}{\uptau}

% logic
%
\providecommand*{\mcond}{\supset} % material conditional
\providecommand*{\bcond}{\equiv}  % biconditional
%
\providecommand*{\conclude}{\Vdash} % conclusion
\providecommand*{\derives}{\vdash}  % is derivable from (provable)
\providecommand*{\entails}{\models} % entails (truth in every model)
\providecommand*{\unique}{\exists!} % exists exactly one
%
\providecommand*{\gstyle}[2]{\Gamma,{#1}\derives{#2},\Delta} % Grentzen

% integers
%
\providecommand*{\ceil}[1]{\mleft\lceil{#1}\mright\rceil}    % ceiling
\providecommand*{\floor}[1]{\mleft\lfloor{#1}\mright\rfloor} % floor
%
% structured proofs
%
% sp: structured derivations
\newcommand*{\sdanswer}[1]{$\square$ & {#1} \\} % answer
\newcommand*{\sdcomm}[1]{{\sdicomm} & {#1} \\}  % comment
\newcommand*{\sdconc}[1]{$\conclude$ & {#1} \\} % conclusion
\newcommand*{\sddef}[1]{$+$ & {#1} \\}          % definition
\newcommand*{\sdend}[1]{$\square$ & {#1} \\}    % end
\newcommand*{\sdexp}[1]{{} & {#1} \\}           % expression
\newcommand*{\sdfact}[1]{$+$ & {#1} \\}         % fact
\newcommand*{\sdhypo}[1]{$-$ & {#1} \\}         % hypothesis
\newcommand*{\sdjust}[1]{$\conclude$ & {#1} \\} % justification
\newcommand*{\sdnum}[2]{{#1} & {#2} \\}         % numbered step
\newcommand*{\sdobs}[2]{{#1} & {#2} \\}         % observation
\newcommand*{\sdprop}[1]{{} & {#1} \\}          % proposition
\newcommand*{\sdstart}[1]{$\bullet$ & {#1} \\}  % start
\newcommand*{\sdtask}[1]{$\bullet$ & {#1} \\}   % task
%
% in-line comment and step
\newcommand*{\sdicomm}{\#\#\ }
\newcommand*{\sdstep}[2]{${#1}$ & $\mleft\{\text{#2}\mright\}$ \\}
%
% Velleman given-goal stuff
%
\providecommand*{\vlrow}[2]{${#1}$ & \qquad\qquad & ${#2}$ \\ } % (Velleman row)
